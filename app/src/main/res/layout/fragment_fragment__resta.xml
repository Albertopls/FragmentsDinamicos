<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#79adec"
    tools:context="com.example.eduardopalacios.fragmentsdinamicos.Fragment_Resta">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Fragment Resta"
            android:textColor="#ffffff"
            android:textSize="30dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text1_resta"
            android:layout_marginBottom="20dp"
            android:hint="Introduce el primer valor"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text2_resta"
            android:hint="Introduce el Segundo valor"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonResta"
            android:layout_marginTop="20dp"
            android:text="Restar"
            android:textColor="#ffffff"
            android:backgroundTint="#ff375c"
            android:layout_gravity="center"/>
    </LinearLayout>
</FrameLayout>
